<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewValorNovaMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/textViewValorNovaMeta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextValorNovaMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewValorNovaMeta"
        app:layout_constraintTop_toBottomOf="@+id/textViewValorNovaMeta" />

    <TextView
        android:id="@+id/textViewDataNovaMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/textViewDataNovaMeta"
        app:layout_constraintStart_toStartOf="@+id/editTextValorNovaMeta"
        app:layout_constraintTop_toBottomOf="@+id/editTextValorNovaMeta" />

    <EditText
        android:id="@+id/editTextDataNovaMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewDataNovaMeta"
        app:layout_constraintTop_toBottomOf="@+id/textViewDataNovaMeta" />
</androidx.constraintlayout.widget.ConstraintLayout>